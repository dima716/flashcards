@import "font-awesome-sprockets";
@import "font-awesome";
@import "bootstrap-social";

$error-frame-color: #a94442;
$alert-large-fs: 20px;
$link-color: #008ab8;
$new-item-bg-color: #d4d4d4;

h2 {
  margin-bottom: 25px;
  text-align: center;
}

a {
  color: $link-color
}

.container {
  padding-top: 10px;
}

.input-group {
  margin-bottom: 10px;
}

.form-control-select {
  background: url(<%= asset_data_uri "down-arrow.png" %>) 100% 50% no-repeat;
  cursor: pointer;
}

.form-control.error {
  box-shadow: 0px 0px 7px $error-frame-color;
}

.alert {
  margin-bottom: 30px;

  &-large {
    font-size: $alert-large-fs
  }
}

.btn-file {
  position: relative;
  overflow: hidden;

  & input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: pointer;
    display: block;
  }
}

.btn-inline {
  margin-right: 10px;
}

.item {
  position: relative;
  border: 1px solid #777;
  font-size: 14px;
  text-align: center;
  box-shadow: 2px 2px 5px #000;
  margin-bottom: 40px;

  &-new {
    background-color: $new-item-bg-color;
  }

  &-panel {
    border-top: 1px solid #000;
    padding: 10px;

    &:first-child {
      border-top: none;
    }
  }

  &-picture {
    padding: 0;
    overflow: hidden;
  }

  &-label {
    position: absolute;
    top: -20px;
    left: 0;
    font-weight: 200;
  }

}

@media (min-width: 1200px) {
    .item {
      display: inline-block;
      *display: inline;
      *zoom: 1;
      vertical-align: top;
      margin-right: 50px;

      &-task {
        margin:0;
      }
    }
}
