<!DOCTYPE html>
<html>
<head>
  <title>Флэшкарточкер</title>
  <meta charset="utf-8">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
</head>
<body>
  <header>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
            <span class="sr-only">Показать навигацию</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Флэшкарточкер", '/', class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse" id="navbar">
          <% if current_user %>
            <ul class="nav navbar-nav navbar-left">
              <% if current_user.profile_image_url %>
                <li><%= image_tag current_user.profile_image_url, class: "img-circle", size: "48x48" %></li>
              <% end %>
              <li><%= link_to "Выйти", logout_path %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Карточки", decks_path %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to "Войти", login_path %></li>
              <li><%= link_to "Регистрация", new_user_path %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
  </header>

  <div class="container">
    <% flash.each do |type, message| %>
      <div class="<%= flash_class(type) %> alert-large text-center"> <%= message %> </div>
    <% end %>
      <%= yield %>
  </div>

</body>
</html>
