<div class="item item-task">
  <div class="label label-info label-lg item-label item-label-name"><%= card.deck.name %></div>
  <% if card.picture_file_name %>
    <div class="item-panel item-picture">
      <%= image_tag card.picture.url(:medium) %>
    </div>
  <% end %>
  <div class="item-panel cards-text-original">
    <%= card.original_text %>
  </div>
  <%= form_tag check_card_path, class: "check-card" do %>
    <div class="item-panel cards-text-translated">
      <%= hidden_field_tag :id, card.id %>
      <%= text_field_tag :user_text, nil, placeholder: "Введите перевод" %>
    </div>
    <div class="item-panel">
      <%= submit_tag "Проверить", class: "btn btn-md btn-primary" %>
    </div>
  <% end %>
</div>
